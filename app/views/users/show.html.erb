<div>
  <%= simple_form_for [current_user, @status] do |f| %>
  <%= f.input :status %>
  <%= f.button :submit %>
<% end %>
</div>

<%= @user.statuses.each do |status| %>
  <p><%= status.status %></p>
<% end %>

<%= image_tag gravatar_image_url((@user.email), size: 150 ) %>

Email: <%= @user.email %><br>
Hometown: <%= @user.hometown %>
